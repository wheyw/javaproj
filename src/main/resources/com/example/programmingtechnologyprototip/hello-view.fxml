<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.programmingtechnologyprototip.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <FlowPane prefHeight="32.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="listview" prefHeight="48.0" prefWidth="200.0" />
               </children></FlowPane>
         </top>
          <center>
              <Canvas fx:id="graphicContent" onMouseClicked="#drawShapeOnCanvas" height="175.0" width="199.0" />
          </center>
      </BorderPane>
   </children>
</VBox>
