<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.proggramingtechnologyshapes.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <FlowPane prefHeight="14.0" prefWidth="242.0">
      <children>
         <Button mnemonicParsing="false" text="Сохранить" onAction="#saveFile_Button" />
         <Separator orientation="VERTICAL" prefHeight="25.0" prefWidth="42.0" />
         <Button mnemonicParsing="false" onAction="#openFile_Button" text="Открыть" />
      </children>
   </FlowPane>

  <Canvas fx:id="sheet" height="331.0" nodeOrientation="INHERIT" width="517.0">
    <VBox.margin>
      <Insets />
    </VBox.margin>
  </Canvas>
  <FlowPane prefHeight="56.0" prefWidth="524.0">
    <Label text="Название фигуры:" />
    <TextField fx:id="nameShape" />
    <ColorPicker fx:id="colorPicker" />
      <Button mnemonicParsing="false" onAction="#back_Button" text="Обратно" />
      <Button mnemonicParsing="false" onAction="#clear_Button" prefHeight="25.0" prefWidth="83.0" text="Очистить" />
  </FlowPane>
</VBox>
