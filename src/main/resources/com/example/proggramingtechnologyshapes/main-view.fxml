<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proggramingtechnologyshapes.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Canvas fx:id="sheet" height="335.0" onMouseClicked="#ClickMouse" width="522.0">
    <VBox.margin>
      <Insets />
    </VBox.margin>
  </Canvas>
  <FlowPane prefHeight="56.0" prefWidth="524.0">
    <Button mnemonicParsing="false" onAction="#ButtonCircleAction" text="круг" />
    <Button mnemonicParsing="false" onAction="#ButtonSquareAction" text="квадрат" />
    <ColorPicker fx:id="colorPicker" />
    <Separator prefWidth="200.0" />
    <TextField fx:id="sizeNumber" />
    <Label fx:id="infoShape" text="Размер" />
  </FlowPane>
</VBox>
